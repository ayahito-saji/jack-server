<h2>パスワードをお忘れの場合</h2>

<%= form_for(resource, as: resource_name, url: new_member_password_path, html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワード変更のためにメールを送信" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
