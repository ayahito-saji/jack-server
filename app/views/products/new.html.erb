<div class="main products-new">
  <div class="container">
    <h1 class="form-heading">新しいプロダクトを作る</h1>
    <%= form_tag("/products/create") do %>
    <div class="form">
      <div class="form-body">
        <h2 class ="form-title">プロダクト名</h2>
        <% @product.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <textarea name="name"><%= @product.name %></textarea>
        <h2 class ="form-title">プロダクトの内容</h2>
        <textarea name="content"></textarea>
        <h2 class ="form-title">進捗</h2>
        <select name="progress" id="">
          <option value="idea">アイデア</option>
          <option value="developing">開発中</option>
          <option value="released">リリース</option>
          <option value="archive">公開終了</option>
        </select>
        <input type="submit" value="作成">
      </div>
    </div>
    <% end %>
  </div>
</div>