<div class="main products-new">
  <div class="container">
    <h1 class="form-heading">新しいプロダクトを作る</h1>
    <%= form_tag("/products/create") do %>
    <div class="form">
      <% @product.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <div class="form-body">
        <h2 class ="form-title">プロダクト名</h2>
        <textarea name="name"><%= @product.name %></textarea>
        <h2 class ="form-title">プロダクトの内容</h2>
        <textarea name="content"><%= @product.content %></textarea>
        <h2 class ="form-title">進捗</h2>
        <select name="progress" id="">
          <option value="アイデア">アイデア</option>
          <option value="開発中">開発中</option>
          <option value="リリース">リリース</option>
          <option value="公開終了">公開終了</option>
        </select>
        <h2 class = "form-title">メンバー</h2>

        <% @members_all.each do |member_each| %>
          <input type="checkbox" name = "members[]" value = <%= member_each.id %>> <%= member_each.nickname %><br>
        <% end %>
        <input type = "submit" value="作成">
      </div>
    </div>
    <% end %>
  </div>
</div>