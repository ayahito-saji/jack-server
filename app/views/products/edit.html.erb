<div class="main products-edit">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/products/#{@product.id}/update") do %>
    <div class="form">
      <% @product.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <div class="form-body">
        <h2 class ="form-title">プロダクト名</h2>
        <textarea name = "name"><%= @product.name %></textarea>
        <h2 class ="form-title">プロダクトの内容</h2>
        <textarea name="content"><%= @product.content %></textarea>
        <h2 class ="form-title">進捗</h2>
        <select name="progress" id="">
          <option value="アイデア">アイデア</option>
          <option value="開発中">開発中</option>
          <option value="リリース">リリース</option>
          <option value="公開終了">公開終了</option>
        </select>
        <% @members.each do |member| %>
          <%= check_box_tag(member.id) %>
          <%= label_tag(member.id, "#{member.nickname}") %>
        <% end %>
        <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
   </div>
</div>