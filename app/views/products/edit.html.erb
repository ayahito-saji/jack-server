<div class="main products-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/products/#{@product.id}/update") do %>
    <div class="form">
      <div class="form-body">
        <h2 class ="form-title">プロダクト名</h2>
        <% @product.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <textarea name = "name"><%= @product.name %></textarea>
        <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
   </div>
</div>